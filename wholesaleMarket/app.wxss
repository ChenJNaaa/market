page{
  background-color: #f0f0f0;  
  font-family: -apple-system-font,Helvetica Neue,Helvetica,sans-serif; 
}

.placeholder{
  color: #919191;
  font-size: 30rpx;
}

.navbar{
  color: #424242;
  display: flex;
  /* align-items: center;   */
  height: 120rpx;
  line-height: 120rpx;   
  margin-bottom: 20rpx;
  background-color: #ffffff;
}
.navbar-on{
  border-bottom:8rpx solid #ff9700;
}
.navbar-off{
  border-bottom:1rpx solid #cbcbcb;
}

.menu{
  flex: 1;
  text-align: center; 
  /* flex-direction: row; */
  font-size: 28rpx;
  border-top:none;
}
.menu image{
  display: inline-block;
  width:80rpx;
  height:80rpx;
  vertical-align: middle; 
}
.menu text{
  width:6em;
  height:1em;
  margin-left: 30rpx;
  vertical-align: middle;
}
.list{
  padding: 30rpx 44rpx;
  margin-bottom: 20rpx;
  background-color: #ffffff; 
}
.title{
  color: #5f5f5f;
  font-size: 28rpx;
  display: flex;
  margin-bottom: 20rpx;
}
.title1{
  flex:1;
}
.date{
  text-align: right;
}
.row2{
  display: flex;
  /* height: 90rpx; */
  /* line-height: 90rpx; */
}
.status{
  flex: 1;
  font-size: 30rpx;
  text-align: right;
}
.pending{
  color: #ff9800;
}
.processed{
  color: #919191;
}
.seller{
  flex: 1;
  font-size: 28rpx;
  color:#3c3c3c;
  /* padding: 30rpx 0; */
  font-family: PingFangSC-Semibold;
}
.seller-name{
  margin-left: 30rpx;
}
.table{
  /* margin-top: 30rpx; */
  display: flex;
  height:82rpx;
  line-height: 82rpx;
  border-bottom:1rpx solid #ebebeb;
}
.table-title{
  color:#9f9f9f;
  font-size: 28rpx;
}
.columns{
  flex:1;
  text-align: center;
}
.column{
  flex:2;
  text-align: left;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis; 
}
.table-list{
  color:#3c3c3c;
  font-size:28rpx;
}

.total-price{
  flex: 1;
  font-size: 32rpx;
  color: #565656;
}
.total-price text{
  color:#ff3535;
}
.panding{
  flex: 1;
  color:#ff9800;
  font-size: 32rpx;
  text-align: right;
}
.arrow{
  width: 10px;
  height: 10px;
  border-top: 2rpx solid #999;
  border-right: 2rpx solid #999;
  transform: rotate(45deg); 
  float: right;
}